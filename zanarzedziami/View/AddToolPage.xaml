<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zanardzediami.View.AddToolPage"
             Title="Dodaj narzędzie">
    <StackLayout Padding="20" Spacing="10">
        <Label Text="Nazwa narzędzia:" />
        <Entry x:Name="NameEntry" Text="{Binding Name}" Placeholder="Wpisz nazwę" />

        <Label Text="Ilość:" />
        <Entry x:Name="QuantityEntry" Text="{Binding Quantity}" Keyboard="Numeric" Placeholder="Wpisz ilość" />

        <Label Text="Cena:" />
        <Entry x:Name="PriceEntry" Text="{Binding Price}" Keyboard="Numeric" Placeholder="Wpisz cenę" />

        <Button Text="Dodaj narzędzie" Clicked="SaveTool" BackgroundColor="Green" TextColor="White" />
    </StackLayout>
</ContentPage>
