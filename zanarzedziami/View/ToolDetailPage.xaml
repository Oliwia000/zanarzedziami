<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zanardzediami.View.ToolDetailPage"
             Title="Szczegóły narzędzia">
    <StackLayout Padding="20" Spacing="10">
        <Label Text="Nazwa:" FontSize="Medium" />
        <Entry x:Name="NameEntry" Text="{Binding Name}" />

        <Label Text="Ilość:" FontSize="Medium" />
        <Entry x:Name="QuantityEntry" Text="{Binding Quantity}" Keyboard="Numeric" />

        <Label Text="Cena:" FontSize="Medium" />
        <Entry x:Name="PriceEntry" Text="{Binding Price}" Keyboard="Numeric" />

        <Button Text="Zaktualizuj" Clicked="UpdateTool" BackgroundColor="Blue" TextColor="White" />
        <Button Text="Usuń" Clicked="DeleteTool" BackgroundColor="Red" TextColor="White" />
    </StackLayout>
</ContentPage>
